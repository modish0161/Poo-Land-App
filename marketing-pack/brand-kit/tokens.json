{
  "meta": {
    "name": "Poo-Land Maze Design Tokens",
    "version": "1.0.0",
    "description": "Design tokens extracted from Poo-Land Maze UI"
  },
  "colors": {
    "primary": {
      "gold": "#FFD700",
      "goldLight": "#FFED4E",
      "goldDark": "#B8860B"
    },
    "secondary": {
      "brown": "#8B4513",
      "brownLight": "#A0522D",
      "brownDark": "#3d2414"
    },
    "accent": {
      "orange": "#FF6B35",
      "orangeGlow": "rgba(255, 107, 53, 0.4)"
    },
    "semantic": {
      "success": "#4CAF50",
      "warning": "#FFC107",
      "danger": "#F44336"
    },
    "background": {
      "dark": "#0a0506",
      "gradientStart": "#1a0a0f",
      "gradientEnd": "#2d1810"
    },
    "game": {
      "wall": "#4a2c1a",
      "trail": "#A0522D"
    },
    "glass": {
      "background": "rgba(255, 255, 255, 0.05)",
      "border": "rgba(255, 255, 255, 0.1)"
    }
  },
  "typography": {
    "fontFamily": {
      "display": "'Fredoka One', cursive",
      "body": "'Nunito', sans-serif",
      "emoji": "'Segoe UI Emoji', 'Apple Color Emoji', 'Noto Color Emoji', sans-serif"
    },
    "scale": {
      "h1": "clamp(2.5rem, 6vw, 4rem)",
      "h2": "clamp(1.5rem, 3.5vw, 2.5rem)",
      "h3": "clamp(1.2rem, 2.5vw, 1.8rem)",
      "body": "clamp(1rem, 2vw, 1.25rem)",
      "button": "clamp(1.1rem, 2.5vw, 1.5rem)",
      "buttonSmall": "clamp(0.9rem, 2vw, 1.1rem)"
    },
    "fontWeight": {
      "regular": 400,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800
    },
    "lineHeight": {
      "body": 1.6
    }
  },
  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px",
    "2xl": "48px"
  },
  "borderRadius": {
    "sm": "8px",
    "md": "16px",
    "lg": "24px",
    "full": "9999px"
  },
  "shadows": {
    "glow": "0 0 20px rgba(255, 215, 0, 0.3)",
    "glowStrong": "0 0 40px rgba(255, 215, 0, 0.5)",
    "card": "0 8px 32px rgba(0, 0, 0, 0.3)",
    "glass": "0 8px 32px 0 rgba(31, 38, 135, 0.37)",
    "neumorphic": "inset 0 1px 2px rgba(255, 255, 255, 0.1), inset 0 -1px 2px rgba(0, 0, 0, 0.1)"
  },
  "transitions": {
    "fast": "150ms ease-in-out",
    "normal": "300ms ease-in-out",
    "slow": "500ms ease-in-out"
  },
  "animations": {
    "pulseGlow": {
      "duration": "2s",
      "timing": "ease-in-out",
      "iteration": "infinite"
    },
    "float": {
      "duration": "2s",
      "timing": "ease-in-out",
      "iteration": "infinite"
    },
    "borderGlow": {
      "duration": "3s",
      "timing": "linear",
      "iteration": "infinite"
    }
  },
  "breakpoints": {
    "mobile": "768px"
  }
}
