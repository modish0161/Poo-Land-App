{
  "name": "poo-land-desktop",
  "version": "1.0.0",
  "description": "Poo-Land Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Poo-Land Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.pooland.app",
    "productName": "Poo-Land",
    "win": {
      "target": "nsis",
      "icon": "../frontend/public/icon-512.png"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      {
        "from": "../frontend/dist",
        "to": "frontend/dist",
        "filter": ["**/*"]
      }
    ]
  }
}
